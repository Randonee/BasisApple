<project basedir=".">
	
	
	<target name="extension">
		<delete dir="extension/project/obj" failOnError="false" includeEmptyDirs="true"/>
						
		<exec dir="extension/project" failonerror="true" executable="haxelib">
			<arg line="run hxcpp Build.xml -Diphonesim" />
		</exec>
		<exec dir="extension/project" failonerror="true" executable="haxelib">
			<arg line="run hxcpp Build.xml -Diphoneos -DHXCPP_ARMV7" />
		</exec>
		<exec dir="extension/project" failonerror="true" executable="haxelib">
			<arg line="run hxcpp Build.xml -Diphoneos" />
		</exec>
	</target>
	
	<target name="buildHaxelib">
		<delete dir="build"/>
		<!--<antcall target="extension" />-->
		
		<mkdir dir="build/"/>
		<mkdir dir="build/BasisApple"/>
		<mkdir dir="build/BasisApple/0,0,1"/>
		<mkdir dir="build/BasisApple/0,0,1/bin"/>
		<mkdir dir="build/BasisApple/0,0,1/template"/>
		
		<exec dir="." failonerror="true" executable="haxe">
			<arg line="build.hxml" />
		</exec>
		
		<copy todir="build/BasisApple/0,0,1">
			<fileset dir="src"/>
		</copy>
	
		<copy todir="build/BasisApple/0,0,1/bin">
			<fileset dir="extension/ndll"/>
		</copy>
	
		<copy todir="build/BasisApple/0,0,1/template">
			<fileset dir="template"/>
		</copy>
	
		<copy file="haxelib.xml" tofile="build/BasisApple/0,0,1/haxelib.xml"/>
		<copy file="build/run.n" tofile="build/BasisApple/0,0,1/run.n"/>
		
		<echo file="build/BasisApple/.current" >0.0.1</echo>
		
		<zip destfile="build/BasisApple.zip" basedir="build/BasisApple" />
	</target>

	<target name="testlib">
		<antcall target="buildHaxelib" />
		<exec dir="." failonerror="true" executable="haxelib">
			<arg line="test build/BasisApple.zip" />
		</exec>
	</target>
	
</project>